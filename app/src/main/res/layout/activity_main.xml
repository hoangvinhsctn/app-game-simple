<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_background">

    <TextView
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:textSize="56sp"
        android:textColor="#f00"
        android:id="@+id/textViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"/>

    <TextView
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="45sp"
        android:textColor="#f00"
        android:id="@+id/textViewTimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="32sp"
        android:background="#F8DF00"
        android:textColor="#FF0101"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trò chơi nhanh tay\n nhanh mắt" />


    <LinearLayout
        android:background="@drawable/custom_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linearHinh"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/imageViewGoc"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/material1" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/imageViewNhan"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/question_mark" />
    </LinearLayout>

    <Button
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button"
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bắt đầu" />

</LinearLayout>